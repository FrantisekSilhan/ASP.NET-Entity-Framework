@page
@model ASP.NET_Entity_Framework.Pages.Authors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.LastName)
        </dd>
    </dl>
</div>

<div>
    <h4>Games by this Author</h4>
    <ul>
        @foreach (var game in Model.GamesByAuthor) {
            <li>@game.Name</li>
        }
    </ul>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Author.AuthorId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
